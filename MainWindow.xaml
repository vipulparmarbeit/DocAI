<Window x:Class="DoctorAI.SpeechToText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoctorAI.SpeechToText"
        mc:Ignorable="d"
        WindowStyle="None" VerticalAlignment="Bottom"
        ResizeMode="NoResize"
        Title="" Height="110" Width="800">
    <Grid>
        <Grid Margin="5,5,5,10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Background="#E2E3E3" Grid.Column="0" FontSize="18" FontWeight="SemiBold" Name="txtSpeechToText" MinHeight="100"/>
            <TextBlock Background="#FF4FA600" Grid.Column="1" FontSize="20" TextAlignment="Center" Foreground="White" FontWeight="SemiBold" Name="txtTextToSpeech" MinHeight="100"/>
            <Button Grid.Column="2" Background="#027EFF" Foreground="White" Width="150" HorizontalAlignment="Right" FontFamily="Helvetica" Click="BtnLogin_Click"  FontSize="25" Name="btnLogin" Content="LOG IN"/>
        </Grid>
    </Grid>
</Window>
